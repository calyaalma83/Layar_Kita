<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/fragment_profile.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D1A"
    android:fillViewport="true"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Profile Avatar -->
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="24dp">

            <ImageView
                android:id="@+id/profileAvatar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/avatar_gradient_background"
                android:scaleType="centerCrop"
                android:contentDescription="Profile avatar"/>

        </FrameLayout>

        <!-- User Name -->
        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <!-- User Email -->
        <TextView
            android:id="@+id/profileEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="johndoe12@gmail.com"
            android:textColor="#9CA3AF"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="32dp"/>

        <!-- Menu Items Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Edit Akun -->
            <androidx.cardview.widget.CardView
                android:id="@+id/menuEditAkun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#1A1A2E"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="@drawable/menu_item_border">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_person"
                        app:tint="#00E5FF"
                        android:contentDescription="Edit akun icon"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Edit Akun"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:layout_marginStart="12dp"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="#6B7280"
                        android:contentDescription="Arrow right"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Notifikasi -->
            <androidx.cardview.widget.CardView
                android:id="@+id/menuNotifikasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#1A1A2E"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="@drawable/menu_item_border">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_notifications"
                        app:tint="#FFD700"
                        android:contentDescription="Notifikasi icon"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Notifikasi"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:layout_marginStart="12dp"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="#6B7280"
                        android:contentDescription="Arrow right"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Bahasa -->
            <androidx.cardview.widget.CardView
                android:id="@+id/menuBahasa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#1A1A2E"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="@drawable/menu_item_border">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_language"
                        app:tint="#00E5FF"
                        android:contentDescription="Bahasa icon"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bahasa"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:layout_marginStart="12dp"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="#6B7280"
                        android:contentDescription="Arrow right"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Pengaturan -->
            <androidx.cardview.widget.CardView
                android:id="@+id/menuPengaturan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#1A1A2E"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="@drawable/menu_item_border">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_settings"
                        app:tint="#9CA3AF"
                        android:contentDescription="Pengaturan icon"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Pengaturan"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:layout_marginStart="12dp"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="#6B7280"
                        android:contentDescription="Arrow right"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Keamanan Akun -->
            <androidx.cardview.widget.CardView
                android:id="@+id/menuKeamanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#1A1A2E"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="@drawable/menu_item_border">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_lock"
                        app:tint="#FF9500"
                        android:contentDescription="Keamanan icon"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Keamanan Akun"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:layout_marginStart="12dp"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="#6B7280"
                        android:contentDescription="Arrow right"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tentang Kami -->
            <androidx.cardview.widget.CardView
                android:id="@+id/menuTentangKami"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#1A1A2E"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="@drawable/menu_item_border">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_info"
                        app:tint="#007AFF"
                        android:contentDescription="Tentang kami icon"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tentang Kami"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:layout_marginStart="12dp"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_right"
                        app:tint="#6B7280"
                        android:contentDescription="Arrow right"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Hapus Akun Button -->
        <Button
            android:id="@+id/btnHapusAkun"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:background="@drawable/btn_delete_account_background"
            android:text="Hapus Akun"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:drawableStart="@drawable/ic_delete"
            android:drawablePadding="8dp"
            android:drawableTint="#FFFFFF"
            android:layout_marginBottom="32dp"/>

    </LinearLayout>
</ScrollView>